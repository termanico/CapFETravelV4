<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:macros="sap.fe.macros"
>
	<VBox core:require="{
		handler: 'sap/fe/cap/managetravels/ext/fragment/CustomSection'
	}">
		<MessageStrip
			text="All bookings for travel {TravelID} got confirmed by the agency."
			showIcon="true"
			class="sapUiSmallMarginBottom"
		/>
		<l:Grid
			hSpacing="1"
			containerQuery="true"
			defaultSpan="L6 M12 S12"
		>
			<l:content>
				<macros:Chart
					id="chartDefault"
					contextPath="/Travel/to_BookedFlights"
					metaPath="@com.sap.vocabularies.UI.v1.Chart"
					personalization="Type,Item"
					selectionMode="Single"
				/>
				<macros:Table
					metaPath="to_Booking@com.sap.vocabularies.UI.v1.LineItem"
					id="bookingTable"
				/>
			</l:content>
		</l:Grid>
	</VBox>
</core:FragmentDefinition>